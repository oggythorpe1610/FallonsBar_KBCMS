 <div class="contact_desc">
		        <div class="wrap">
			         <div class="contact-form">
				  	   <h2>@("Contact Us".Label())</h2>
					      <form method="post" action="@Url.FrontUrl().SubmissionUrl("ContactUs")" id="contact-form">
                           @Html.AntiForgeryToken()
                            <div class="left_form">
					    	<div>
						    	<span><label for"userName">@("NAME".Label())</label></span>
						    	<span><input name="userName" type="text" class="textbox" data-val-required="Name is required" data-val="true"></span>
                               @Html.ValidationMessageForInput("userName")
						    </div>
						    <div>
						    	<span><label for="from">@("E-MAIL".Label())</label></span>
						    	<span><input name="from" type="text" class="textbox" data-val-required="Email is required" data-val-regex-pattern="^\s*[a-zA-Z0-9!#$%&'*+\-/=?^_`{|}~]+(\.[a-zA-Z0-9!#$%&'*+\-/=?^_`{|}~]+)*@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})\s*$" data-val-regex="Palese input an email address"  data-val="true" ></span>
                               @Html.ValidationMessageForInput("from")
						    </div>
						    <div>
						     	<span><label>@("Fax".Label())</label></span>
						    	<span><input name="userPhone" type="text" class="textbox"></span>
						    </div>
                              </div>
					        <div class="right_form">					    	
						    	<span><label for="userMsg">@("SUBJECT".Label())</label></span>
						    	<span><textarea name="userMsg"> </textarea></span>
						    </div>
						   <div>
						   		<span><input type="submit" value="Submit" class="myButton"></span>
						  </div>
					    </form>
					    <div class="clear"></div>
				  </div>
				 <div class="content_bottom">
				 	<div class="company_address">
				     	<h2>@("Location".Label())</h2>
						    	<p>@("500 Lorem Ipsum Dolor Sit,".Label())</p>
						   		<p>@("22-56-2-9 Sit Amet, Lorem,".Label())</p>
						   		<p>@("USA".Label())</p>
				   		<p>@("Phone:(00) 222 666 444".Label())</p>
				   		<p>@("Fax: (000) 000 00 00 0".Label())</p>
                      <p>@("Email:".Label()) <span><a href="mailto:info@mycompany.com">@("info@mycompany.com".Label())</a></span></p>
				     </div>
				       <div class="contact_info">
    	 				<h2>Find Us Here</h2>
					    	  <div class="map">
							   	    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2400.526375801501!2d-2.2266960000000284!3d53.01090000000001!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487a42a8cab3c21f%3A0x3df8d6040fc8b042!2sFallon&#39;s!5e0!3m2!1sen!2suk!4v1414403353316" width="600" height="450" frameborder="0" style="border:0"></iframe>
							  </div>
      				     </div>
				      <div class="clear"></div>
	                </div>	
	             </div>  
	          </div>

 <script>
   $('#contact-form').submit(function(e){
     e.preventDefault();
     alert("You need to set smtp server at 'System->Setting->SMTP' in order to use this function.");
   });
</script>