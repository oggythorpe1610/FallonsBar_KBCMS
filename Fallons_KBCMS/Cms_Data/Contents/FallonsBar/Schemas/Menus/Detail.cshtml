@if (Model != null)
{ 
<div>
	<h3 class="title" @ViewHelper.Edit(Model,"Title")>@Html.Raw(Model.Title ?? "")</h3>
	<div class="content">
		<div @ViewHelper.Edit(Model,"Summary")>@Html.Raw(Model.Summary ?? "")</div>
		<div @ViewHelper.Edit(Model,"Detail")>@Html.Raw(Model.Detail ?? "")</div>
		<div @ViewHelper.Edit(Model,"Img")>@Html.Raw(Model.Img ?? "")</div>
	</div>
</div>
}